@model RentAMovie.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Details</h2>
<table class="table table-hover table-bordered">
    <tr><td>Name</td><td>@Model.Name</td></tr>
    <tr><td>Genre</td><td>@Model.Genre.Name</td></tr>
    <tr><td>Date Added</td><td>@Model.DateAdded.ToShortDateString()</td></tr>
    <tr><td>Date Released</td><td>@Model.ReleaseDate.Value.ToShortDateString()</td></tr>
    <tr><td>Number In Stock</td><td>@Model.NumberInStock</td></tr>
</table>